{
  "name": "@bililive/workspace",
  "version": "0.0.0",
  "author": {
    "name": "frg2089",
    "email": "frg2089@outlook.com",
    "url": "https://blog.shimakaze.dev"
  },
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34",
  "keywords": [],
  "scripts": {
    "format": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "prettier-plugin-imports": "^4.3.3",
    "prettier-plugin-pkg": "^0.21.2",
    "typescript": "^5.9.3"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "importOrder": [
      "<BUILTIN_MODULES>",
      " ",
      "^vue$|^vuepress",
      "<THIRD_PARTY_MODULES>",
      " ",
      "^[.]"
    ],
    "plugins": [
      "prettier-plugin-imports",
      "prettier-plugin-pkg"
    ]
  }
}
